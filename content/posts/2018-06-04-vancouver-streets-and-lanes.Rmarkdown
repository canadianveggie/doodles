      select(length,area,type) %>% 
      select(-type) %>% 
      summarize_all(sum) %>%
      mutate(type="Total")) %>%
  mutate(ratio=area/cov_area) %>%
  mutate(length=format_length(length),
         area=format_area(area),
         ratio=format_percent(ratio))


